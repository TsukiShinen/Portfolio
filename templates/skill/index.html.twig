{% extends 'baseAdmin.html.twig' %}

{% block title %}Skill index{% endblock %}

{% block body %}
    <h1>Skill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Icon</th>
                <th>IsPassive</th>
                <th>IsBase</th>
                <th>Parent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.id }}</td>
                <td>{{ skill.name }}</td>
                <td><img src="{{ asset("images/"~skill.icon) }}" width="64px"/></td>
                <td>{{ skill.isPassive ? 'Yes' : 'No' }}</td>
                <td>{{ skill.isBase ? 'Yes' : 'No' }}</td>
                <td>{{ skill.parent }}</td>
                <td>
                    <a href="{{ path('app_skill_show', {'id': skill.id}) }}">show</a>
                    <a href="{{ path('app_skill_edit', {'id': skill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_skill_new') }}">Create new</a>
{% endblock %}
