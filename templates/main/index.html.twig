{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <nav {{ stimulus_controller('menu') }}>
        <div class="menu-layer menu-layer-1" id="menu-layer-1">
            <ul>
                <li>
                    <input class="menu-btn" type="checkbox" id="btn-character" data-content="character" data-src="{{ url('ajax_main_character') }}" data-show="content" data-hide="menu-layer-2" data-uncheck="btn-menu"/>
                    <label for="btn-character">
                        <i class="fa-solid fa-user"></i>
                    </label>
                </li>
                <li>
                    <input class="menu-btn" type="checkbox" id="btn-menu" data-show="menu-layer-2" data-hide="" data-uncheck=""/>
                    <label for="btn-menu">
                        <i class="fa-solid fa-house"></i>
                    </label>
                </li>
                <li>
                    <input class="menu-btn" type="checkbox" id="btn-contact" data-content="contact" data-src="{{ url('ajax_main_contact') }}" data-show="content" data-hide="menu-layer-2" data-uncheck="btn-menu"/>
                    <label for="btn-contact">
                        <i class="fa-solid fa-envelope"></i>
                    </label>
                </li>
            </ul>
        </div>
        <div class="menu-layer menu-layer-2" id="menu-layer-2">
            <ul>
                <span class="arrow"></span>
                <li>
                    <input class="menu-btn" type="checkbox" id="btn-inventory" data-content="inventory" data-src="{{ url('ajax_main_inventory') }}" data-show="content" data-hide="menu-layer-2" data-uncheck="btn-menu"/>
                    <label for="btn-inventory">
                        <i class="fa-solid fa-suitcase"></i> Inventaire
                    </label>
                </li>
                <li>
                    <input class="menu-btn" type="checkbox" id="btn-skills" data-content="skills" data-src="{{ url('ajax_main_skills') }}" data-show="content" data-hide="menu-layer-2" data-uncheck="btn-menu"/>
                    <label for="btn-skills">
                        <i class="fa-solid fa-check"></i> Compétences
                    </label>
                </li>
                <li>
                    <input class="menu-btn" type="checkbox" id="btn-quest" data-content="quest" data-src="{{ url('ajax_main_quest') }}" data-show="content" data-hide="menu-layer-2" data-uncheck="btn-menu"/>
                    <label for="btn-quest">
                        <i class="fa-solid fa-book"></i> Quêtes
                    </label>
                </li>
            </ul>
        </div>
    </nav>

    <div class="root">
        <div class="header">
            {% include'main/healthBar.html.twig' with { "name": "Nolan", "level" : 0, "health": 10, "maxHealth": 10 } %}

            <div class="clock" {{ stimulus_controller('clock') }}></div>
        </div>
        <div id="content"></div>
    </div>
{% endblock %}
