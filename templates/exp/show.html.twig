{% extends 'baseAdmin.html.twig' %}

{% block title %}Exp{% endblock %}

{% block body %}
    <h1>Exp</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exp.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exp.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ exp.content }}</td>
            </tr>
            <tr>
                <th>IsFinished</th>
                <td>{{ exp.isFinished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ exp.start ? exp.start|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ exp.end ? exp.end|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exp_index') }}">back to list</a>

    <a href="{{ path('app_exp_edit', {'id': exp.id}) }}">edit</a>

    {{ include('exp/_delete_form.html.twig') }}
{% endblock %}
